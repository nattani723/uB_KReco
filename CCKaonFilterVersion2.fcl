process_name: CCKaonFilterVersion2

services:
{
  #Load the service that manages root files for histograms.
  TFileService: { fileName: "CCKaonFilterVersion2.root" }
  RandomNumberGenerator: {}                     #ART native random number generator
  @table::microboone_simulation_services
  message:      @local::standard_info
  FileCatalogMetadata: @local::art_file_catalog_mc
}

#source is now a root file
source:
{
  module_type: RootInput
  maxEvents:  -1            # Number of events to create
}

outputs:
{
 out1:
 {
   module_type: RootOutput
   fileName:    "CCKaonFilterVersion2.root"    #default file name, can override from command line with -o or --output
   dataTier: "reconstructed"
   fastCloning: false
 } 
}

physics:
{
 producers:{

  }
 filters:  {} 
 analyzers:{
   CCKaonFilterVersion2:
   {
   module_type: "CCKaonFilterVersion2"
 }
 }
 
 
 #define the producer and filter modules for this path, order matters, 
 #filters reject all following items.  see lines starting physics.producers below
 ana:  [ CCKaonFilterVersion2 ]
 #ana: []
 
 #define the output stream, there could be more than one if using filters 
 stream1:  [ out1 ]

 #trigger_paths is a keyword and contains the paths that modify the art::event, 
 #ie filters and producers
 #trigger_paths: [reco] 

 #end_paths is a keyword and contains the paths that do not modify the art::Event, 
 #ie analyzers and output streams.  these all run simultaneously
 #end_paths:     [ stream1, ana ] 
 end_paths:     [  ana ] 
}

# define the list of LArSoft modules to run through the simulate path

#physics.analyzers.CCKaonFilterVersion2:  @local::microboone_CCKaonFilterVersion2

physics.analyzers.CCKaonFilterVersion2.TrackModuleLabel:        "pandoraNu::UBXSec"
physics.analyzers.CCKaonFilterVersion2.CalorimetryModuleLabel:  "dedxcalibration::particleid"
physics.analyzers.CCKaonFilterVersion2.HitsModuleLabel:  "pandoraCosmicHitRemoval::UBXSec"
physics.analyzers.CCKaonFilterVersion2.LArG4ModuleLabel: "largeant"
physics.analyzers.CCKaonFilterVersion2.PIDLabel: "pid::particleid"
physics.analyzers.CCKaonFilterVersion2.POTModuleLabel:"generator"
physics.analyzers.CCKaonFilterVersion2.GenieGenModuleLabel:"generator"
physics.analyzers.CCKaonFilterVersion2.ProducerLabels: @local::producerlabels_mcc8_UBXSec_dedxcalib
physics.analyzers.CCKaonFilterVersion2.BraggAlgo: @local::braggalgo_mcc8_dedxcalib
physics.analyzers.CCKaonFilterVersion2.HitTrackAssn: "pandoraNu::UBXSec"
physics.analyzers.CCKaonFilterVersion2.HitTruthAssn: "pandoraCosmicHitRemoval::UBXSec"

physics.analyzers.CCKaonFilterVersion2.SaveTrackInfo: true
physics.analyzers.CCKaonFilterVersion2.SaveCaloInfo: true
physics.analyzers.CCKaonFilterVersion2.SaveGenieInfo: true

services.DetectorPropertiesService.NumberTimeSamples:        6400
services.DetectorPropertiesService.ReadOutWindowSize:        6400
services.DetectorClocksService.InheritClockConfig:           false
services.DetectorClocksService.TriggerOffsetTPC:             -0.400e3
source.inputCommands:        [ "keep *_*_*_*", "drop *_opfiltercommon__McRecoStage1" ]
